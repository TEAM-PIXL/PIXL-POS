<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.pixlpos.controllers.waiterconsole.WaiterLandingController" alignment="CENTER" spacing="20">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Button fx:id="menuButton" text="Menu" onAction="#onMenuButtonClick"/>
    <Button fx:id="newOrderButton" text="New Order" onAction="#onNewOrderButtonClick"/>
    <Button fx:id="ordersButton" text="Orders" onAction="#onOrdersButtonClick"/>
    <Button fx:id="logoutButton" text="Logout" onAction="#onLogoutButtonClick"/>
</VBox>
